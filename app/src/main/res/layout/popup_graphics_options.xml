<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup_sorting_style_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/popup_padding"
    tools:parentTag="android.widget.LinearLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <app.simple.inure.decorations.ripple.DynamicRippleTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/lato_bold"
            android:paddingHorizontal="30dp"
            android:paddingVertical="20dp"
            android:text="@string/highlight_extensions"
            android:textSize="@dimen/popup_text_size"
            app:appFontStyle="bold"
            app:textColorStyle="primary" />

        <app.simple.inure.decorations.checkbox.CheckBox
            android:id="@+id/graphics_highlight_checkbox"
            android:layout_width="@dimen/checkbox_dimensions"
            android:layout_height="@dimen/checkbox_dimensions"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="20dp"
            android:buttonTint="?attr/colorAppAccent" />

    </LinearLayout>

</merge>