<?xml version="1.0" encoding="utf-8"?>
<app.simple.inure.decorations.theme.ThemeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <app.simple.inure.decorations.padding.PaddingAwareLinearLayout
        android:id="@+id/home_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:padding="@dimen/popup_padding"
        android:translationZ="1dp">

        <ImageView
            android:id="@+id/header_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/app_name"
            android:padding="10dp"
            android:src="@drawable/ic_app_icon"
            android:transitionName="main_app_icon" />

        <app.simple.inure.decorations.typeface.TypeFaceTextView
            android:id="@+id/typeFaceTextView02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="16dp"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textSize="@dimen/header_font_size"
            app:appFontStyle="light"
            app:textColorStyle="heading" />

        <app.simple.inure.decorations.ripple.DynamicRippleImageButton
            android:id="@+id/home_header_search_button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/search_button"
            android:src="@drawable/ic_search"
            android:transitionName="adapter_search_icon"
            app:buttonTintType="regular" />

        <app.simple.inure.decorations.ripple.DynamicRippleImageButton
            android:id="@+id/home_header_pref_button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/configuration_button"
            android:src="@drawable/ic_settings"
            app:buttonTintType="regular" />

        <app.simple.inure.decorations.ripple.DynamicRippleImageButton
            android:id="@+id/home_header_option_button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/configuration_button"
            android:src="@drawable/ic_more_vert"
            app:buttonTintType="regular" />

    </app.simple.inure.decorations.padding.PaddingAwareLinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/home_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/popup_padding"
            app:layout_behavior="@string/over_scroll_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <app.simple.inure.decorations.theme.ThemeDivider
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="@dimen/popup_padding" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/home_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never" />

                <app.simple.inure.decorations.theme.ThemeDivider
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_margin="10dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/apps_categories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never" />

                <app.simple.inure.decorations.ripple.DynamicRippleTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/popup_padding"
                    android:layout_marginTop="@dimen/popup_padding"
                    android:paddingHorizontal="@dimen/popup_padding"
                    android:paddingVertical="@dimen/header_padding"
                    android:text="@string/favourite_commands"
                    android:textSize="@dimen/home_heading_text_size"
                    app:appFontStyle="bold"
                    app:drawableEndCompat="@drawable/ic_arrow_right"
                    app:drawableTintStyle="secondary"
                    app:textColorStyle="primary" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</app.simple.inure.decorations.theme.ThemeLinearLayout>
