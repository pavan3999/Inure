<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/panel_item_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <app.simple.inure.decorations.typeface.TypeFaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/screen_time"
                android:textSize="@dimen/preferences_title_text_size"
                app:appFontStyle="bold"
                app:textColorStyle="secondary" />

            <app.simple.inure.decorations.typeface.TypeFaceTextView
                android:id="@+id/screen_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/desc_text_size"
                app:appFontStyle="regular"
                app:textColorStyle="accent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <app.simple.inure.decorations.typeface.TypeFaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/launched"
                android:textSize="@dimen/preferences_title_text_size"
                app:appFontStyle="bold"
                app:textColorStyle="secondary" />

            <app.simple.inure.decorations.typeface.TypeFaceTextView
                android:id="@+id/launch_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/desc_text_size"
                app:appFontStyle="regular"
                app:textColorStyle="accent" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/header_padding"
        android:orientation="vertical">

        <app.simple.inure.decorations.typeface.TypeFaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_used"
            android:textSize="@dimen/preferences_title_text_size"
            app:appFontStyle="bold"
            app:textColorStyle="secondary" />

        <app.simple.inure.decorations.typeface.TypeFaceTextView
            android:id="@+id/last_used"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/desc_text_size"
            app:appFontStyle="regular"
            app:textColorStyle="accent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/header_padding"
        android:orientation="vertical">

        <app.simple.inure.decorations.typeface.TypeFaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mobile_data"
            android:textSize="@dimen/preferences_title_text_size"
            app:appFontStyle="bold"
            app:textColorStyle="secondary" />

        <app.simple.inure.decorations.typeface.TypeFaceTextView
            android:id="@+id/mobile_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/desc_text_size"
            app:appFontStyle="regular"
            app:textColorStyle="accent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/header_padding"
        android:orientation="vertical">

        <app.simple.inure.decorations.typeface.TypeFaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wifi"
            android:textSize="@dimen/preferences_title_text_size"
            app:appFontStyle="bold"
            app:textColorStyle="secondary" />

        <app.simple.inure.decorations.typeface.TypeFaceTextView
            android:id="@+id/wifi_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/desc_text_size"
            app:appFontStyle="regular"
            app:textColorStyle="accent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/header_padding"
        android:orientation="vertical">

        <app.simple.inure.decorations.theme.ThemeDivider
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <app.simple.inure.decorations.typeface.TypeFaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/header_padding"
            android:text="@string/usage"
            android:textSize="@dimen/popup_text_size"
            app:appFontStyle="bold"
            app:textColorStyle="heading" />

    </LinearLayout>

</LinearLayout>