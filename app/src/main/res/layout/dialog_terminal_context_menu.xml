<?xml version="1.0" encoding="utf-8"?>
<app.simple.inure.decorations.corners.DynamicCornerLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@android:color/transparent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:padding="@dimen/dialog_padding">

    <app.simple.inure.decorations.ripple.DynamicRippleTextView
        android:id="@+id/select_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="@dimen/popup_item_gap_length"
        android:fontFamily="@font/lato_bold"
        android:padding="@dimen/menu_text_button_padding"
        android:text="@string/select_text"
        app:textColorStyle="primary"
        android:textSize="@dimen/popup_text_size"
        app:appFontStyle="bold" />

    <app.simple.inure.decorations.ripple.DynamicRippleTextView
        android:id="@+id/copy_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/lato_bold"
        android:padding="@dimen/menu_text_button_padding"
        android:layout_marginBottom="@dimen/popup_item_gap_length"
        android:text="@string/copy_all"
        app:textColorStyle="primary"
        android:textSize="@dimen/popup_text_size"
        app:appFontStyle="bold" />

    <app.simple.inure.decorations.ripple.DynamicRippleTextView
        android:id="@+id/paste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:padding="@dimen/menu_text_button_padding"
        android:text="@string/paste"
        android:layout_marginBottom="@dimen/popup_item_gap_length"
        app:textColorStyle="primary"
        android:textSize="@dimen/popup_text_size"
        app:appFontStyle="bold" />

    <app.simple.inure.decorations.ripple.DynamicRippleTextView
        android:id="@+id/send_control_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:padding="@dimen/menu_text_button_padding"
        android:text="@string/send_control_key"
        app:textColorStyle="primary"
        android:textSize="@dimen/popup_text_size"
        app:appFontStyle="bold" />

    <app.simple.inure.decorations.ripple.DynamicRippleTextView
        android:id="@+id/send_fn_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:padding="@dimen/menu_text_button_padding"
        android:text="@string/send_fn_key"
        app:textColorStyle="primary"
        android:textSize="@dimen/popup_text_size"
        app:appFontStyle="bold" />

</app.simple.inure.decorations.corners.DynamicCornerLinearLayout>